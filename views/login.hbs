<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link href="img/logo/logo.png" rel="icon">
  <title>SAMPINDO UCP - Login</title>
  <link href="https://freerestapi.herokuapp.com/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://freerestapi.herokuapp.com/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <link href="https://freerestapi.herokuapp.com/admin/css/ruang-admin.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-login">
  <!-- Login Content -->
  <div class="container-login">
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card shadow-sm my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-12">
                <div class="login-form">
                  <div class="text-center">
	         {{#if err1}}
	         <div class="alert alert-danger" role="alert">
		  Wrong Password Or Username
	         </div>
	         {{/if}}
	         {{#if err2}}
	         <div class="alert alert-danger" role="alert">
		  Please Fill All Input Field
	         </div>
	         {{/if}}
                    <h1 class="h4 text-gray-900 mb-4">Login</h1>
                  </div>
                  <form class="user" method="POST" action="/login">
                    <div class="form-group">
                      <input type="text" class="form-control" name="username"
                        placeholder="Enter Username Here">
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox small" style="line-height: 1.5rem;">
                        <input type="checkbox" class="custom-control-input" id="customCheck">
                        <label class="custom-control-label" for="customCheck">Remember
                          Me</label>
                      </div>
                    </div>
                    <div class="form-group">
                      <input type="submit" value="Login" class="btn btn-primary btn-block"></input>
                    </div>
                  </form>
                  <hr>
                  <div class="text-center">
                    <a class="font-weight-bold small" href="/register">Create an Account!</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Login Content -->
  <script src="https://freerestapi.herokuapp.com/admin/vendor/jquery/jquery.min.js"></script>
  <script src="https://freerestapi.herokuapp.com/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="https://freerestapi.herokuapp.com/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
  <script src="https://freerestapi.herokuapp.com/admin/js/ruang-admin.min.js"></script>
</body>

</html>