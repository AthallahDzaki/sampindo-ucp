<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link href="img/logo/logo.png" rel="icon">
  <title>SAMPINDO UCP - Register</title>
  <link href="https://freerestapi.herokuapp.com/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://freerestapi.herokuapp.com/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <link href="https://freerestapi.herokuapp.com/admin/css/ruang-admin.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-login">
  <!-- Register Content -->
  <div class="container-login">
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card shadow-sm my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-12">
                <div class="login-form">
                  <div class="text-center">
	         {{#if err1}}
	         <div class="alert alert-danger" role="alert">
		  Accounts Username Has Been Registered
	         </div>
	         {{/if}}
	         {{#if err2}}
	         <div class="alert alert-danger" role="alert">
		  Please Fill All Input Field
	         </div>
	         {{/if}}
                    <h1 class="h4 text-gray-900 mb-4">Register</h1>
                  </div>
                  <form class="user" method="POST" action="/register">
                    <div class="form-group">
                      <label>Username</label>
                      <input type="text" class="form-control" id="exampleInputFirstName" name="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                      <label>Full Name</label>
                      <input type="text" class="form-control" id="exampleInputLastName" name="fullname" id="fullname" placeholder="Full Name">
                    </div>
                    <div class="form-group">
                      <label>Email</label>
                      <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" name="email" id="email"
                        placeholder="Enter Email Address...">
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      <input type="password" class="form-control" id="exampleInputPassword" placeholder="Password" name="password">
                    </div>
                    <div class="form-group">
                      <label>Repeat Password</label>
                      <input type="password" class="form-control" id="exampleInputPasswordRepeat"
                        placeholder="Repeat Password">
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                  </form>
                  <hr>
                  <div class="text-center">
                    <a class="font-weight-bold small" href="/">Already have an account?</a>
                  </div>
                  <div class="text-center">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Register Content -->
  <script src="https://freerestapi.herokuapp.com/admin/vendor/jquery/jquery.min.js"></script>
  <script src="https://freerestapi.herokuapp.com/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="https://freerestapi.herokuapp.com/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
  <script src="https://freerestapi.herokuapp.com/admin/js/ruang-admin.min.js"></script>
</body>

</html>